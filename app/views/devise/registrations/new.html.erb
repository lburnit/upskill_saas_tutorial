<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <!-- what text do we show if statement -->
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account for Â£10/month and get access to the community and contact information</p>
        <% else %>
          <h1>Basic Account</h1>  
          <p>Sign up for free and get basic access to the community.</p>
        <% end %>  
      </div>
        <!-- what type of plan do we show if statement -->
      <div class="well">
          <h2>Sign up</h2> 
          <% if params[:plan] == '2' %>
          <%= render "pro_form" %> <!-- Injecting _Pro_form.html.erb here -->
          <% else %>
            <%= render "basic_form" %> <!-- Injecting _Pro_form.html.erb here -->
            <% end %>
            
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>